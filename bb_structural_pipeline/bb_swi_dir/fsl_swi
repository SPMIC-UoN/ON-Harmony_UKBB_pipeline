FSL_SWIDIR=$( cd $(dirname $0) ; pwd)
. ${FSL_SWIDIR}/settings.sh

if [ $3 = "Siemens" ]; then
  ${FSL_SWIDIR}/call_matlab.sh -l $1/logs/bb_swi_matlab_Siemens_$2.log -f swiProcessing_Siemens $1
elif [ $3 = "Phillips" ] ; then
  ${FSL_SWIDIR}/call_matlab.sh -l $1/logs/bb_swi_matlab_Phillips_$2.log -f swiProcessing_Phillips $1
elif [ $3 = "GE" ] ; then
  ${FSL_SWIDIR}/call_matlab.sh -l $1/logs/bb_swi_matlab_GE_$2.log -f swiProcessing_GE $1
fi
