logDir=$PWD/$1"/logs/"
logFile=$logDir"bb_xtract__"$1"__"$$".log"

exec 3>&1 4>&2 1> $logFile 2>&1

. $BB_BIN_DIR/bb_pipeline_tools/bb_set_header

execPath=`dirname $0`

if [ "$2" == "" ]; then
    holdJob=""
else
	holdJob=" -j $2 "
fi

if [ "$3" == "" ]; then
    MNI_to_FA_warp=../TBSS/FA/MNI_to_dti_FA_warp.nii.gz
else
	MNI_to_FA_warp=$3
fi

if [ "$4" == "" ]; then
    FA_to_MNI_warp=../TBSS/FA/dti_FA_to_MNI_warp.nii.gz
else
	FA_to_MNI_warp=$4
fi

direc=$PWD/$1/dMRI

cd $direc

mkdir -p $direc/xtract_preproc

cd xtract_preproc

structures=$execPath/structureList

listJobs=""

while read line ; do
    echo $line
    struct=`echo $line | awk '{print $1}'`
    nseed=`echo $line | awk '{print $2}'`
    #wallt=`echo $line | awk '{print $3}' | tr ':' ' '`
    #hours=`echo $wallt | awk '{print $1}'`
    #minutes=`echo $wallt | awk '{print $2}'`
    #time=$(( 60 * hours + minutes ))
    #listJobs=`${FSLDIR}/bin/fsl_sub -N "bb_xtract_$1" -T $time   -l $logDir/xtract $holdJob  $execPath/bb_trackSubjectStruct $1/dMRI $struct $nseed $MNI_to_FA_warp $FA_to_MNI_warp `",$listJobs"
    time=`echo $line | awk '{print $3}'`
    listJobs=`${FSLDIR}/bin/fsl_sub  -T $time -q $FSLGECUDAQ -N "bb_xtract_${struct}_${1}" -l $logDir/xtract $holdJob  $execPath/bb_trackSubjectStruct $1/dMRI $struct $nseed $MNI_to_FA_warp $FA_to_MNI_warp `",$listJobs"

done < $structures

. $BB_BIN_DIR/bb_pipeline_tools/bb_set_footer

exec 1>&3 2>&4

echo ${listJobs%","}
