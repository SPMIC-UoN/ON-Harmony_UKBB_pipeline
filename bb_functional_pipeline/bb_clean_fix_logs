. $BB_BIN_DIR/bb_pipeline_tools/bb_set_header 

subjectLogsDir="$PWD/$1/logs/"
restingDir="$PWD/$1/fMRI/rfMRI.ica"
logFile="$subjectLogsDir/bb_fixlogs_${1}.log"

for fixFile in ".fix.log" ".fix" ".fix_2b_predict.log" ; do
    if [ -f $restingDir/$fixFile ] ; then
        cat $restingDir/$fixFile >> $logFile 
    fi
done

rm -f $restingDir/.fix*

. $BB_BIN_DIR/bb_pipeline_tools/bb_set_footer 
